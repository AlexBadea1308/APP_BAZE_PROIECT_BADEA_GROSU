<Window x:Class="HotelReservations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelReservations"
        mc:Ignorable="d"
        Title="Hotel Reservations App" Height="400" Width="600"
        Background="#D6E6F2">

    <Grid>
        <!-- Lock Icon -->
        <Grid HorizontalAlignment="Center" Margin="0,0,0,30" Width="80" Height="80">
            <Ellipse Fill="#F44336">
                <Ellipse.Effect>
                    <DropShadowEffect ShadowDepth="5" BlurRadius="10" Color="Black"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="🔒" FontSize="32" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Login Form -->
        <Border Background="White" CornerRadius="20" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350" Name="MainStackPanel">
            <StackPanel>
                <!-- Username -->
                <TextBlock Text="Username" Foreground="Gray" FontSize="14" Margin="0,0,0,5"/>
                <TextBox Name="UsernameTextBox" Height="50" FontSize="16" Margin="0,0,0,15" Padding="10" BorderBrush="#F44336" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" KeyDown="TextBox_KeyDown"/>

                <!-- Password -->
                <TextBlock Text="Password" Foreground="Gray" FontSize="14" Margin="0,0,0,5"/>
                <PasswordBox Name="PasswordBox" Height="50" FontSize="16" Margin="0,0,0,25" Padding="10" BorderBrush="#F44336" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" KeyDown="TextBox_KeyDown"/>

                <!-- Login Button -->
                <Button Content="Login" Click="LoginButton_Click" Background="#F44336" Foreground="White" FontSize="16" FontWeight="Bold" Height="40" HorizontalAlignment="Stretch" VerticalAlignment="Center" BorderBrush="Transparent"/>
            </StackPanel>
        </Border>

        <!-- General Menu (Hidden by Default) -->
        <Menu Grid.Row="0" Name="GeneralMenu" Visibility="Hidden">
            <MenuItem Padding="5,0,5,0" Header="General" Height="30">
                <MenuItem Name="RoomsMenuItem" Header="Rooms" Click="RoomsMenuItem_Click"/>
                <MenuItem Name="RoomTypeMenuItem" Header="RoomTypes" Click="RoomTypeMenuItem_Click"/>
                <MenuItem Name="UsersMenuItem" Header="Users" Click="UsersMenuItem_Click"/>
                <MenuItem Name="PricesMenuItem" Header="Prices" Click="PricesMenuItem_Click"/>
                <MenuItem Name="ReservationsMenuItem" Header="Reservations" Click="ReservationsMenuItem_Click"/>
                <MenuItem Name="LogoutMenuItem" Header="Logout" Click="LogoutMenuItem_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
