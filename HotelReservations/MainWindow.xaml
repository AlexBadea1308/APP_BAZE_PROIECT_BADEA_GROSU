<Window x:Class="HotelReservations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hotel Reservations App" Height="500" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#B3E5FC" Offset="0.0"/>
            <GradientStop Color="#4FC3F7" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <!-- Login Section -->
        <Grid Name="LoginGrid" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="White" CornerRadius="15" Padding="20" Width="300">
                <StackPanel>
                    <!-- Username -->
                    <TextBlock Text="Username" Foreground="Gray" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Name="UsernameTextBox" Height="40" FontSize="16" Margin="0,0,0,10" Padding="5" BorderBrush="#F44336" BorderThickness="1" KeyDown="TextBox_KeyDown"/>

                    <!-- Password -->
                    <TextBlock Text="Password" Foreground="Gray" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox Name="PasswordBox" Height="40" FontSize="16" Margin="0,0,0,20" Padding="5" BorderBrush="#F44336" BorderThickness="1" KeyDown="TextBox_KeyDown"/>

                    <!-- Login Button -->
                    <Button Content="Login" Click="LoginButton_Click" Background="#F44336" Foreground="White" FontSize="16" FontWeight="Bold" Height="40" Width="100"
                            HorizontalAlignment="Center" BorderBrush="Transparent"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Dashboard Section (Initially Hidden) -->
        <Grid Name="DashboardGrid" Visibility="Hidden">
            <DockPanel>
                <!-- Sidebar -->
                <StackPanel DockPanel.Dock="Left" Width="200" Background="#37474F">
                    <!-- Hotel Name -->
                    <TextBlock Text="Topolos Grand Resort" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

                    <!-- Dashboard Buttons -->
                    <Button Content="Rooms" Name="RoomsMenuItem" Click="RoomsMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                    <Button Content="Room Types" Name="RoomTypeMenuItem" Click="RoomTypeMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                    <Button Content="Users" Name="UsersMenuItem" Click="UsersMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                    <Button Content="Prices" Name="PricesMenuItem" Click="PricesMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                    <Button Content="Reservations" Name="ReservationsMenuItem" Click="ReservationsMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                    <Button Content="Logout" Name="LogoutMenuItem" Click="LogoutMenuItem_Click" Background="Transparent" Foreground="White" Margin="5" BorderBrush="Transparent"/>
                </StackPanel>

                <!-- Main Content Area (Right side of the Dashboard) -->
                <Grid Background="#ECEFF1">
                    <!-- Add your content for the main area of the dashboard here -->
                </Grid>
            </DockPanel>
        </Grid>
    </Grid>
</Window>